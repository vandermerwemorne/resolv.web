@model Resolv.Web.Models.VerificationAssessmentsViewModel

@{
    ViewData["Title"] = "Verification";
}

<div class="row">
    <div class="col-md-12">
        <h2>Verification</h2>
        <hr />

        <div class="row mt-4">
            <div class="col-md-12">
                <div id="riskLinesTableContainer">
                    @await Html.PartialAsync("_ReEvalsTable", 
                    new Resolv.Web.Models.ReEvalsViewModel {
                        ReEvals = Model.ReEvals,
                        HoldingCompanyName = Model.HoldingCompanyName,
                        AssessmentSiteName = Model.AssessmentSiteName,
                        DivisionName = Model.DivisionName
                    })
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        #riskLinesTable tbody tr {
            cursor: pointer;
        }

        #riskLinesTable tbody tr:hover {
            background-color: #f5f5f5 !important;
            transform: scale(1.01);
            transition: all 0.2s ease;
        }
    </style>
    <script>
        $(document).ready(function () {
            $('#riskLinesTable tbody tr').on('click', function () {
                var reEvalUid = $(this).data('re-eval-uid');
                if (reEvalUid) {
                    window.location.href = '@Url.Action("Verify", "Verification")?reEvalUid=' + reEvalUid + '&holdingcompanyuid=@Model.HoldingCompanyUid&assessmentsiteuid=@Model.AssessmentSiteUid&divisionuid=@Model.DivisionUid';
                }
            });
        });
    </script>
}