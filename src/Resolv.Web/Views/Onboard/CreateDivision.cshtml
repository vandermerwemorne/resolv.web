@model Resolv.Web.Models.Division
@{
    ViewData["Title"] = "Create Division";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Create Holding Company</li>
        <li class="breadcrumb-item active" aria-current="page">Create Division</li>
        <li class="breadcrumb-item">Create Assessment Site</li>
    </ol>
</nav>
<h2 class="mb-4">Create Division</h2>
<form asp-action="CreateDivision" method="post" class="needs-validation" novalidate>   
    <div class="form-group row mb-3">
        <label class="col-md-2 col-form-label">Holding Company</label>
        <div class="col-md-10 pt-2">
            @ViewBag.HoldingName
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="Name" class="col-md-2 col-form-label">Division Name</label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-md-2 col-md-10 d-flex gap-2">
            <a asp-controller="Onboard" asp-action="CreateHoldingCompany"
               asp-route-divisionuid="@ViewBag.DivisionUid"
               class="btn btn-secondary">Back</a>

            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
    <input type="hidden" asp-for="HoldingCompanyUid" value="@ViewBag.HoldingCompanyUid" />
</form>

<hr />
<h3>Existing Divisions</h3>
@if (ViewBag.Divisions != null)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Insert Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var division in ViewBag.Divisions)
            {
                <tr>
                    <td>@division.Name</td>
                    <td>@division.InsertDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-controller="Onboard" asp-action="CreateAssessmentSite"
                           asp-route-divisionuid="@division.Uid"
                           asp-route-holdingcompanyuid="@division.HoldingCompanyUid"
                           class="btn btn-secondary py-0">Assessment Sites</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}