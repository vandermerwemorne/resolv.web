@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <style>
        body {
            background-image: url('/img/bg-lg.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center;
        }

        .custom-footer {
            padding-bottom: 100px;
        }
    </style>
</div>

<footer class="custom-footer"
    style="position: fixed; left: 0; bottom: 0; width: 100%; min-height: 120px; display: flex; justify-content: space-between; align-items: end; background: transparent; border: none; z-index: 100;">
    <div style="color: #00e6ef; font-family: 'Segoe UI', Arial, sans-serif; margin-left: 2vw;">
        <div style="font-size: 1.2rem; font-weight: 500; margin-bottom: 0.5rem;">predictive intelligence</div>
        <ul style="color: #fff; font-size: 1rem; margin-left: 1rem;">
            <li>Leverage advanced data analytics and machine learning algorithms to identify business risk and
                vulnerability</li>
            <li>Assess likelihood and impact, to develop targeted mitigation plans and provide real-time monitoring and
                alerts</li>
        </ul>
    </div>
    <div style="margin-bottom: 10px; margin-right: 2vw;">
        <img src="/img/logo.png" alt="resolv logo" style="height: 60px; width: auto;" />
    </div>
</footer>
</div>