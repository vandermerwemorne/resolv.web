<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Resolv</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Resolv.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler nav-element" type="button" data-bs-toggle="collapse"
                    data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon nav-element"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark nav-element" asp-area="" asp-controller="Assessment"
                                    asp-action="Index">ASSESSMENT</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark nav-element" href="#" id="adminDropdown"
                                    role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    ADMIN
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Onboard"
                                            asp-action="Index">ONBOARD COMPANY</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="User"
                                           asp-action="Index">ONBOARD USERS</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="AdminUser"
                                           asp-action="Index">ADMIN USERS</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                    <div class="ms-auto d-flex">
                        @if (User.Identity != null && !User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Account" asp-action="Login" method="post">
                                <ul class="navbar-nav flex-row">
                                    <li class="nav-item me-2">
                                        <input class="form-control" type="text" name="username" placeholder="User ID"
                                            required />
                                    </li>
                                    <li class="nav-item me-2">
                                        <input class="form-control" type="password" name="password"
                                            placeholder="Security Key" required />
                                    </li>
                                    <li class="nav-item">
                                        <button class="btn" type="submit"
                                            style="border: none;background: none;padding-bottom: 0px;padding-top: 2px;">
                                            <i class="fas fa-power-off" style="color: #756e6e; font-size: xx-large;"></i>
                                        </button>
                                    </li>
                                </ul>
                            </form>
                        }
                        else
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <span class="navbar-text me-2">Hello, @(User.Identity != null ? User.Identity.Name :
                                                                            "")!</span>
                                </li>
                                <li class="nav-item">
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit"
                                            class="btn btn-link navbar-text p-0 m-0 align-baseline nav-element"
                                            style="text-decoration: none;">LOG OUT</button>
                                    </form>
                                </li>
                            </ul>
                        }
                    </div>
                    @if (TempData["LoginError"] != null)
                    {
                        <div class="alert alert-danger text-center">@TempData["LoginError"]</div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <style>
        .nav-element {
            color: #fff !important;
        }

        .nav-element:hover {
            color: #00e6ef !important;
        }

        /* Color the hamburger icon only */
        .navbar-toggler-icon {
            filter: invert(62%) sepia(99%) saturate(747%) hue-rotate(142deg) brightness(102%) contrast(101%);
        }
    </style>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>